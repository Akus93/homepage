{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png|html|css|ico)",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=86400"
      }]
    }]
  }
}